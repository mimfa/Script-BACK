                </DockPanel>
            </DockPanel>
        </DockPanel>
        <WebBrowser x:Name="WB" DockPanel.Dock="Bottom"  HorizontalAlignment="Stretch" RenderTransformOrigin="0.0,0.0" Margin="0" Navigated="WB_Navigated" Navigating="WB_Navigating" UseLayoutRounding="False" AllowDrop="False"/>
    </DockPanel>
</Window>
